@page
@model OpeningHoursModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Opening Hours";
}
<div class="container-fluid">
    <div class="row h-100">
        <div class="col-3 bg-light menuheight">
            <h4 class="text-left font-weight-bolder mt-4">Welcome Admin</h4>
            <div class="row">
                <div class="mt-5 w-100"></div>
                <div class="col-9">
                    <h5 class="font-italic text-left">Menu</h5>
                    <div class="w-100">
                        <a asp-page="/Admin">Home</a>
                    </div>
                    
                    <h5 class="font-italic text-left mt-3">Locations</h5>
                    <div class="w-100">
                        <a asp-page="/AddWorkspace">Add workspace</a>
                    </div>
                    
                    <div class="w-100">
                        <a asp-page="/DeleteWorkspace">Delete workspace</a>
                    </div>
                    <h5 class="font-italic text-left mt-3">Employees</h5>
                    <div class="w-100">
                        <a asp-page="/AddEmployee">Add employee</a>
                    </div>
                    
                    
                    <div class="w-100">
                        <a asp-page="/DeleteEmployee">Delete employee</a>
                    </div>
                    
                    <h5 class="font-italic text-left mt-3">Reservations</h5>
                    <div class="w-100">
                        <a asp-page="/AddReservation">Add reservation</a>
                    </div>
                    
                    <div class="w-100">
                        <a asp-page="/DeleteReservations">Delete reservation</a>
                    </div>
                    
                    <h5 class="font-italic text-left mt-3">Settings</h5>
                    <div class="w-100">
                        <a asp-page="/ChangeName">Company Name</a>    
                    </div>
                    
                    <div class="w-100">
                        <a class="nav-link disabled" asp-page="/OpeningHours">Opening hours</a>    
                    </div>
                    
                    <div class="w-100">
                        <a asp-page="/Priorities">Edit Priorities</a>
                    </div>
                </div>
            </div>
            
            <hr>
            <a class="position-absolute" style="bottom: 15px;" asp-page="/Index">Logout</a>
        </div>
        <div class="col">
            <div class="row">
                <div class="pl-5 col-8">
                    <div class="card mt-2">
                        <article class="card-body">
                        <h4 class="card-title mb-4 mt-1">Change Opening Hours</h4>
                        <form method="post">
                            <fieldset>
                                <div class="form-group">
                                    <label>Monday</label>
                                    <input id="txtMonday" placeholder="09:00-17:00" name="Monday" class="form-control" type="text" required>
                                </div> <!-- form-group// -->
                                <div class="form-group">
                                    <label>Tuesday</label>
                                    <input id="txtTuesday" name="Tuesday" placeholder="09:00-17:00" class="form-control" type="text" required>
                                </div> <!-- form-group// -->

                                
                                <div class="form-group">
                                    <label>Wednesday</label>
                                    <input id="txtWednesday" name="Wednesday" placeholder="09:00-17:00" class="form-control" type="text" required>
                                </div> <!-- form-group// -->
                                <div class="form-group">
                                    <label>Thursday</label>
                                    <input id="txtThursday" name="Thursday" placeholder="09:00-17:00" class="form-control" type="text" required>
                                </div> <!-- form-group// -->
                                 <div class="form-group">
                                    <label>Friday</label>
                                    <input id="txtFriday" name="Friday" placeholder="09:00-17:00" class="form-control" type="text" required>
                                </div> <!-- form-group// -->
                                <div class="form-group">
                                    <label>Saturday</label>
                                    <input id="txtSaturday" name="Saturday" placeholder="Closed" class="form-control" type="text" required>
                                </div> <!-- form-group// -->
                                <div class="form-group">
                                    <label>Sunday</label>
                                    <input id="txtSunday" name="Sunday" placeholder="Closed" class="form-control" type="text" required>
                                </div> <!-- form-group// -->
                                <div class="form-group">
                                    <button type="submit" value="Submit" asp-page-handler="Submit" class="btn btn-dark btn-lg">Save</button>
                                </div> <!-- form-group// -->    
                            </fieldset> 
                            @Model.Info                                              
                        </form>
                        </article>
                    </div> <!-- card.// -->
                </div>
            </div>
        </div>
  </div>
</div>
