@page
@model DeleteEmployeeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container-fluid">
    <div class="row h-100">
        <div class="col-3 bg-light menuheight">
            <h4 class="text-left font-weight-bolder mt-4">Welcome Admin</h4>
            <div class="row">
                <div class="mt-5 w-100"></div>
                <div class="col-9">
                    <h5 class="font-italic text-left">Menu</h5>
                    <div class="w-100">
                        <a asp-page="/Admin">Home</a>
                    </div>
                    
                    <h5 class="font-italic text-left mt-3">Locations</h5>
                    <div class="w-100">
                        <a asp-page="/AddWorkspace">Add workspace</a>
                    </div>
                    
                    <div class="w-100">
                        <a asp-page="/DeleteWorkspace">Delete workspace</a>
                    </div>
                    <h5 class="font-italic text-left mt-3">Employees</h5>
                    <div class="w-100">
                        <a asp-page="/AddEmployee">Add employee</a>
                    </div>
                    
                    <div class="w-100">
                        <a class="nav-link disabled" asp-page="/DeleteEmployee">Delete employee</a>
                    </div>
                    
                    <h5 class="font-italic text-left mt-3">Reservations</h5>
                    <div class="w-100">
                        <a asp-page="/AddReservation">Add reservation</a>
                    </div>

                    <div class="w-100">
                        <a asp-page="/DeleteReservations">Delete reservation</a>
                    </div>
                    
                    <h5 class="font-italic text-left mt-3">Settings</h5>
                    <div class="w-100">
                        <a asp-page="/ChangeName">Company Name</a>    
                    </div>
                    
                    <div class="w-100">
                        <a asp-page="/OpeningHours">Opening hours</a>    
                    </div>
                    
                    <div class="w-100">
                        <a asp-page="/Priorities">Edit Priorities</a>
                    </div>
                </div>
            </div>
            
            <hr>
            <a class="position-absolute" style="bottom: 15px;" asp-page="/Index">Logout</a>
        </div>

        <div class="col">
            <div class="row">
                <div class="pl-5 col-10">
                    <div class="card mt-2">
                        <article class="card-body">
                        <h4 class="card-title mb-4 mt-1">Delete employee</h4>
                            <div><b>Employee info:</b></div>
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>name</th>
                                        <th>email</th>
                                        <th>function</th>
                                        <th>Priority</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var employee in @Model.ShowEmployees())
                                    {
                                        <form method="post">
                                            <fieldset>
                                                <tr>
                                                    <td>
                                                        <img class="img-fluid" src="/Images/Reservation.png"/>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(m => employee.EmpName)
                                                        <input type="hidden" name="Name" value="@Html.DisplayFor(m => employee.EmpName)"/>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(m => employee.EmpEmail)
                                                        <input type="hidden" name="Email" value="@Html.DisplayFor(m => employee.EmpEmail)"/>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(m => employee.EmpFunction)
                                                        <input type="hidden" name="Function" value="@Html.DisplayFor(m => employee.EmpFunction)"/>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(m => employee.EmpPriority)
                                                        <input type="hidden" name="Priority" value="@Html.DisplayFor(m => employee.EmpPriority)"/>
                                                    </td>
                                                    <td>
                                                    <button type="submit" value="Submit" asp-page-handler="Submit" onclick="return confirm('Are you sure you want to delete this employee: @Html.DisplayFor(m => employee.EmpFunction) @Html.DisplayFor(m => employee.EmpEmail)')"class="btn btn-dark btn-sm">X</button>
                                                    </td>
                                                </tr>
                                            </fieldset>
                                        </form>
                                    }
                                </tbody>
                            </table>

                        </article>
                    </div> <!-- card.// -->
                </div>
            </div>
        </div>
    </div>

</div>


