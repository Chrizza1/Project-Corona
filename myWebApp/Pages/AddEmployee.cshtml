@page
@model AddEmployeeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add Employee";
}

<div class="container-fluid">
    <div class="row h-100">
        <div class="col-3 bg-light muneheight">
            <h4 class="text-left font-weight-bolder mt-4">Welcome Admin</h4>
            <div class="row">
                <div class="mt-5 w-100"></div>
                <div class="col-9">
                    <h5 class="font-italic text-left">Menu</h5>
                    <div class="w-100">
                        <a asp-page="/Admin">Home</a>
                    </div>
                    
                    <h5 class="font-italic text-left mt-3">Locations</h5>
                    <div class="w-100">
                        <a asp-page="/AddWorkspace">Add workspace</a>
                    </div>
                    
                    <div class="w-100">
                        <a asp-page="/DeleteWorkspace">Delete workspace</a>
                    </div>
                    <h5 class="font-italic text-left mt-3">Employees</h5>
                    <div class="w-100">
                        <a class="nav-link disabled" asp-page="/AddEmployee">Add employee</a>
                    </div>
                    
                    <div class="w-100">
                        <a asp-page="/DeleteEmployee">Delete employee</a>
                    </div>

                    <div class="w-100">
                        <a asp-page="/Message">Send general message</a>
                    </div>

                    <h5 class="font-italic text-left mt-3">Reservations</h5>
                    <div class="w-100">
                        <a asp-page="/AddReservation">Add reservation</a>
                    </div>
                    
                    <div class="w-100">
                        <a asp-page="/DeleteReservations">Delete reservation</a>
                    </div>
                    
                    <h5 class="font-italic text-left mt-3">Settings</h5>
                    <div class="w-100">
                        <a asp-page="/ChangeName">Company Name</a>    
                    </div>
                    
                    <div class="w-100">
                        <a asp-page="/OpeningHours">Opening hours</a>    
                    </div>
                    
                    <div class="w-100">
                        <a asp-page="/Priorities">Edit Priorities</a>
                    </div>

                    <hr>
                    <a class="mb-3 mt-5" asp-page="/Index">Logout</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="row">
                <div class="pl-5 col-8">
                    <div class="card mt-2">
                        <article class="card-body">
                        <h4 class="card-title mb-4 mt-1">Add employee</h4>
                        <div><b>Employee info:</b></div>
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>name</th>
                                    <th>email</th>
                                    <th>function</th>
                                    <th>Priority</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var employee in @Model.ShowEmployees())
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(m => employee.EmpName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => employee.EmpEmail)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => employee.EmpFunction)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(m => employee.EmpPriority)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <form method="post">
                            <fieldset>
                                <div class="form-group">
                                    <label>Name</label>
                                    <input id="txtName" name="Name" class="form-control" type="text" required>
                                </div> <!-- form-group// -->

                                <div class="form-group">
                                    <label>E-mail</label>
                                    <input id="txtEmail" name="Email" class="form-control" type="email" required>
                                </div>

                                <div class="form-group">
                                    <label>Password</label>
                                    <input id="txtPassword" name="Password" class="form-control" type="text" required>
                                </div> <!-- form-group// -->

                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>Function</label>
                                        <input id="txtFunction" name="Function" class="form-control" type="text" required>
                                    </div> <!-- form-group// -->

                                    <div class="form-group col-md-6">
                                        <label for="inputPriority">Priority</label>
                                        <select name="Priority" id="inputPriority" class="form-control" required>
                                            <option selected>High</option>
                                            <option>Medium</option>
                                            <option>Low</option>
                                        </select>
                                    </div> <!-- form-group// -->
                                </div>

                                <div class="form-group">
                                    <button type="submit" value="Submit" asp-page-handler="Submit" class="btn btn-dark btn-lg">Save</button>
                                </div> <!-- form-group// -->    
                            </fieldset>                                               
                        </form>
                        </article>
                    </div> <!-- card.// -->
                </div>
            </div>
        </div>
  </div>

</div>
