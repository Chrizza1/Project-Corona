@page
@model DeleteWorkspaceModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete Workspace";
}

<div class="container-fluid">
    <div class="row h-100">
        <div class="col-3 bg-light">
            <h4 class="text-left font-weight-bolder mt-4">Welcome Admin</h4>
            <div class="row">
                <div class="mt-5 w-100"></div>
                <div class="col-9">
                    <h5 class="font-italic text-left">Notifications</h5>
                </div>

                <div class="col">
                    <div class="circle">1</div>
                </div>
            </div>
            <hr>
            <p class="mt-2 mb-2">Text Notifications</p>
            <hr>

            <div class="mt-5 w-100"></div>
            <h5 class="font-italic text-left">Manage my reservations</h5>
            <hr>
            <a class="" asp-area="" asp-page="/Index">Logout</a>
        </div>

        <div class="col">
            <div class="row">
                <div class="pl-5 col-10">
                    <div class="card mt-2">
                        <article class="card-body">
                        <h4 class="card-title mb-4 mt-1">Delete Workspace</h4>
                        <div><b>Workspace info:</b></div>
                        <form method="post">
                            <fieldset>
                                <table class="table table-bordered w-100 table-hover">
                                    <thead>
                                        <tr>
                                            <th>location</th>
                                            <th>room</th>
                                            <th>availableworkspaces</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var workspace in @Model.ShowWorkspaces())
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(m => workspace.WSlocation)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => workspace.WSroom)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => workspace.WSavailableworkspaces)
                                                </td>
                                                <td>
                                                    <div class="form-group">
                                                    <input type="checkbox" id="txtId" name="Id" class="form-control" value="@workspace.WSid">
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                    <div class="form-group">
                                    <button type="submit" value="Submit" asp-page-handler="Submit" class="btn btn-dark btn-lg">Save</button>
                                    </div>
                                </fieldset>
                            </form>
                        </article>
                    </div> <!-- card.// -->
                </div>
            </div>
        </div>
    </div>
</div>
