@page
@model AdminModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Admin";
}

<div class="container-fluid">
    <div class="row h-100">
        <div class="col-3 bg-light menuheight">
            <h4 class="text-left font-weight-bolder mt-4">Welcome Admin</h4>
            <div class="row">
                <div class="mt-5 w-100"></div>
                <div class="col-9">
                    <h5 class="font-italic text-left">Notifications</h5>
                </div>

                <div class="col">
                    <div class="circle">1</div>
                </div>
            </div>
            <hr>
            <p class="mt-2 mb-2">Text Notifications</p>
            <hr>

            <div class="mt-5 w-100"></div>

            <a class="position-absolute" style="bottom: 15px;" asp-page="/Index">Logout</a>
        </div>
        <div class="col">
            <div class="row">
                <div class="pl-5 col-4 border-right">
                    <h4 class="font-weight-bolder pt-5 pb-5">Locations</h4>
                    <div class="w-100">
                        <a asp-page="/AddWorkspace">Add workspace</a>
                    </div>
                    <div class="w-100">               
                        <a asp-page="/DeleteWorkspace">Delete workspace</a>
                    </div>
                </div>

                <div class="pl-5 col-4 border-right">
                    <h4 class="font-weight-bolder pt-5 pb-5">Employees</h4>
                    <div class="w-100">               
                        <a asp-page="/AddEmployee">Add employee</a>
                    </div>

                    <div class="w-100">               
                        <a asp-page="/DeleteEmployee">Delete employee</a>
                    </div>
                </div>

                <div class="pl-5 col-4">
                    <h4 class="font-weight-bolder pt-5 pb-5">Settings</h4>
                    <div class="w-100">
                        <a asp-page="/ChangeName">Company Name</a>               
                    </div>
                    <div class="w-100">
                        <a asp-page="/OpeningHours">Opening hours</a>               
                    </div>
                    <div class="w-100">
                        <a asp-page="/Priorities">Edit Priorities</a>
                    </div>
                     @Model.Info    
                </div>
            </div>

            <div style="height: 100px" class="w-100"></div>

            <div class="row">
                <div class="pl-5 col-4 border-right">
                    <h4 class="font-weight-bolder pb-5">Sign up</h4>
                    <div class="w-100">               
                        <a asp-page="/AddReservation">Add reservation</a>
                    </div>
                    <div class="w-100">               
                        <a asp-page="/DeleteReservations">Delete reservation</a>
                    </div>
                </div>

                <div class="col-8 pl-5 ">
                    <h4 class="font-weight-bolder pb-5">Message</h4>
                    <form action="" method="post">
                        <fieldset>
                            <tr>
                                <h6>Type message</h6>
                                <div class="form-group w-100">
                                    <textarea rows="4" cols="50" type="text" id="msg" name="Bericht"></textarea>
                                </div>

                                <div class="form group">
                                    <button type="submit" id="sendButton" class="btn btn-dark btn-lg"  asp-page-handler="OnPostSubmit" >Send</button>
                                </div>
                            </tr>   
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>