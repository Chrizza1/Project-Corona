@page
@model IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Login";
}
<span id="msg"></span>
                <script type ="text/javascript">
                    var source = new EventSource('/api/sse');

                    source.onopen = function(event) {
                        document.getElementById("msg").innerHTML 
                    += "<h2>Opened</h2>";
                    };

                    source.onmessage = function (event) {
                        document.getElementById("msg").innerHTML 
                    += "<h2>" + event.data + "</h2>";
                    };

                    source.onerror = function(event) {
                        document.getElementById("msg").innerHTML 
                    += "<h2>Closed</h2>";
                        source.close();
                    }
                   
                </script>
<div class="container">
    <div class="card mt-5">
        <article class="card-body">
        <h4 class="card-title mb-4 mt-1">Login</h4>
        <form method="post">
            <div class="form-group">
                <label>Your email</label>
                <input id="txtEmail" name="Email" class="form-control" placeholder="Email" type="email" required>
            </div> <!-- form-group// -->
            
            <div class="form-group">
                <a class="float-right" href="#">Forgot?</a>
                <label>Your password</label>
                <input class="form-control" placeholder="Password" id="txtPassword" name="Password" type="password" required>
            
            <div class="form-group">
                <button type="submit" value="Submit" asp-page-handler="Submit" class="btn btn-dark mt-5 btn-lg" onclick="myFunction()">Login</button>
                </div> <!-- form-group// -->
               <!-- <div class="alert alert-danger" role="alert" id="ErrorMessage" style="display:none;">Wrong email and password combination</div> -->
        </form>
        </article>
    </div> <!-- card.// -->
</div>

<script>
    function myFunction() {
        document.getElementById('ErrorMessage').style.display = "block";
    }  
</script>