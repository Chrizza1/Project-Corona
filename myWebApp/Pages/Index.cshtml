@page
@model IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Login";
}

<div class="container">
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-2">User</div>
            <div class="col-4"><input type="text" id="userInput" /></div>
        </div>
        <div class="row">
            <div class="col-2">Message</div>
            <div class="col-4"><input type="text" id="messageInput" /></div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-6">
                <input type="button" id="sendButton" value="Send Message" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
<script src="~/lib/signalr.js"></script>
<script src="~/lib/chat.js"></script>

<div class="container">
    <div class="card mt-5">
        <article class="card-body">
        <h4 class="card-title mb-4 mt-1">Login</h4>
        <form method="post">
            <div class="form-group">
                <label>Your email</label>
                <input id="txtEmail" name="Email" class="form-control" placeholder="Email" type="email" required>
            </div> <!-- form-group// -->
            
            <div class="form-group">
                <a class="float-right" href="#">Forgot?</a>
                <label>Your password</label>
                <input class="form-control" placeholder="Password" id="txtPassword" name="Password" type="password" required>
            
            <div class="form-group">
                <button type="submit" value="Submit" asp-page-handler="Submit" class="btn btn-dark mt-5 btn-lg" onclick="myFunction()">Login</button>
                </div> <!-- form-group// -->
               <!-- <div class="alert alert-danger" role="alert" id="ErrorMessage" style="display:none;">Wrong email and password combination</div> -->
        </form>
        </article>
    </div> <!-- card.// -->
</div>

<script>
    function myFunction() {
        document.getElementById('ErrorMessage').style.display = "block";
    }  
</script>